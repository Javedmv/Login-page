<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5 mt-5 ">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Welcome Login</h2>
            <span>login for the exsisting user</span>
            <% if(locals.logout){ %>
                <div class="alter alert-success text-center">
                    <%=logout%>
                </div>
            <%} %>
        </div>
        <form action="/route/Login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-left">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pills">Login</button>
        </form>
    </div>


<%- include('footer') -%>